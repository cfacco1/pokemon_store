<div class="container">
  <h2 class="text-center mb-5">Mon Pokepanier</h2>
  
<% if current_user.cart.items.count===0 %>
    <div>
    <p> Votre Panier est vide </p>
    </div>
 <% else %>
  <% current_user.cart.items.each do |item|%>
   <div class="container-fluid" >
      <div class ="row ">
        <div class= "col-lg-6">
          <img src="<%= item.image_url %>" class="card-img-top" alt="Card image cap" style="width: 20%;">
		    </div>
        <div class= "col-lg-2">
		     <p>Quantit√©: </p>
        </div>
        <div class= "col-lg-2">
		      <%= item.title %>
        </div>
        <div class = "col-lg-2">
		      <%= item.price %>
        </div>
		   
      </div>
    </div>
		
	<% end %>
 <%end%>


  <div class= "row mt-4">
    <div class="col-lg-6 text-right">
      <p> Nombre d'article :</p>
    </div>
    <div class="col-lg-2">
      <%= current_user.cart.items.count %>
    </div>
     <div class="col-lg-2">
      <h4>Total :</h4>
    </div>
    <div class="col-lg-2">
      <%= current_user.cart.total_price %>$
    </div>
  </div>
</div>