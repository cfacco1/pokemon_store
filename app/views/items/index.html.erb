<%= render 'layouts/header' %>

<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-lg-3 col-md-6">
        <div class="single-product-item">
          <figure>
            <img src="<%= item.image_url %>" class="card-img-top" alt="Card image cap" style="width: 100px; height: 200px;">
          </figure>
          <div class="product-text">
            <a href="<%= item_path(item.id)%>">
              <h6><%= item.title %></h6>
            </a>
            <p><%= item.price %>â‚¬
              <%= link_to edit_cart_path(item.id) do %>
                <i class="fa fa-cart-plus" aria-hidden="true"></i>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
